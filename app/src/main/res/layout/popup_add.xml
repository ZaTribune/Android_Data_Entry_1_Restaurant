<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:background="@drawable/dialog">

            <EditText android:id="@+id/et_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:maxLength="50"
                android:hint="ادخل الإسم ...."
                android:inputType="text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton android:id="@+id/ibtn_thump"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/img_0"
            android:scaleType="fitXY"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="control"/>
        <Button android:id="@+id/btn_submit_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ibtn_thump"
            android:text="OK"
            android:textColor="@color/colorPrimaryDark"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="control"
            android:layout_toRightOf="@id/ibtn_thump" />
    </RelativeLayout>


    </LinearLayout>
